<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loftier.minesweeper">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mine_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UserRegistration"
            android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".PlayAsGuest" />
        <activity android:name=".SignUp" />
        <activity android:name=".Game" />
        <activity android:name=".Settings" />
        <activity
            android:name=".GameOption"
            android:label="@string/title_activity_game_option"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".BackgroundAudioService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".HelpMenu"
            android:label="@string/title_activity_help_menu"
            android:theme="@style/AppTheme" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Scores"
            android:label="@string/title_activity_scores"
            android:theme="@style/AppTheme" />
    </application>

</manifest>